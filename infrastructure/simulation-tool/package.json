{
  "name": "simulation-tool",
  "version": "1.0.0",
  "description": "Simulate L2 traffic on RIF Rollup network",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "test": "mocha",
    "test:watch": "yarn test --watch",
    "build": "rm -rf build && tsc",
    "watch": "tsc --watch",
    "simulate": "node .",
    "simulate:watch": "npx nodemon ."
  },
  "author": "",
  "dependencies": {
    "@ethersproject/logger": "^5.4.0",
    "@rsksmart/rif-rollup-js-sdk": "^0.13.4-alpha",
    "config": "^3.3.9",
    "ethers": "^5.4.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/config": "^3.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.1",
    "@types/sinon": "10.0.15",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "sinon": "15.2.0",
    "sinon-chai": "3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.ts",
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  }
}
